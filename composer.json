{
    "name": "voquis/pdfapi",
    "description": "A PDF API for generating business documents",
    "homepage": "https://github.com/voquis/pdfapi",
    "license": "MIT",
    "require": {
        "php": "^7.2",
        "laravel/lumen-framework": "5.8.*",
        "vlucas/phpdotenv": "^3.3",
        "voquis/pdflib": "^0.0.2"
    },
    "require-dev": {
        "ext-xsl": "*",
        "fzaninotto/faker": "^1.4",
        "mockery/mockery": "^1.0",
        "phpstan/phpstan": "^0.11.5",
        "phpunit/phpunit": "^7.0",
        "smalot/pdfparser": "^0.14.0",
        "squizlabs/php_codesniffer": "^3.4"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AppTest\\": "tests/"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "test": [
            "@phpcs",
            "@phpunit",
            "@phpstan"
        ],
        "phpcs": "./vendor/bin/phpcs app bootstrap resources routes tests --standard=PSR2",
        "phpunit": "./vendor/bin/phpunit tests --coverage-html build/test-coverage",
        "phpstan":"./vendor/bin/phpstan analyse --level=7 app bootstrap resources tests"
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
